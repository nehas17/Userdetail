{{#if server_error}}
<div class="text-danger">
    <p class="btn-danger text-center"> {{server_error}}</p>
</div>
{{/if}}

{{#if server_success }}
<div class="text-success">
    <p class="btn-success text-center">
        {{server_success}}
    </p>
</div>
{{/if}}

<div class="card mt-5">
    <div class="card-header">
        <h3 class="mb-0">User Search</h3>
    </div>
    <div class="card-body">
        <form action="#" novalidate="novalidate" id="userSearch">
            <div class="form-row">
                <div class="form-group col-sm-4">
                    <div class="form-field">
                        <label class="form-control-label" for="">Salary</label>
                        <input class="salary form-control" name="salary" type="number" placeholder="Enter your salary"
                            data-validate="salary">
                        <span class="error_salary text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-sm-4">
                    <div class="form-field">
                        <label for="user_search" class="form-control-label">Select Filter</label>
                        <select class="form-control" id="user_search">
                            <option value="">select </option>
                            {{#each sign}}
                            <option value="{{this.value}}">
                                {{this.label}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-group col-sm-4 d-flex align-items-end">
                    <button class="removeSearch btn btn-secondary mr-2" type="reset">Cancel</button>
                    <button type="button" class="search btn btn-primary">Search</button>
                </div>
            </div>


        </form>
    </div>
    <!-- /form user info -->
</div>


<div class="addSearch">
    <div class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
</div>